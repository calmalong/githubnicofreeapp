<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/textFinalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="평가점수"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/testresult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="피드백 내용\n\n\n"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFinalScore"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/userinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/strTxt8"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testresult"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btnGather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="흡연 정보 수집 페이지로"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
